<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@color/cpYellow"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout"
>
    <TextView
            android:layout_height="28dp"
            android:layout_width="252dp"
            android:text="Enter the screening code to begin"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="155dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/room_name"/>
    <EditText
            android:id="@+id/room_name"
            android:layout_width="255dp"
            android:layout_height="76dp"
            android:hint="Screening Code"
            android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_enter_room"/>

    <ProgressBar

            android:id="@+id/progress_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/btn_enter_room"
            app:layout_constraintBottom_toBottomOf="@+id/btn_enter_room"
            app:layout_constraintLeft_toLeftOf="@+id/btn_enter_room"
            app:layout_constraintRight_toRightOf="@+id/btn_enter_room"
    />

    <Button


            android:id="@+id/btn_enter_room"
            android:layout_width="250dp"
            android:layout_height="73dp"
            android:text="Enter"
            android:fadingEdge="horizontal|vertical"
            android:background="@color/cpLavender" style="@style/AppTheme.RoundedCornerMaterialButton"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/room_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="80dp"
            android:layout_marginStart="80dp" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_facebook"/>



    <!--<style name="MyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">-->
        <!--<item name="shapeAppearance">@style/MyShapeAppearance</item>-->
    <!--</style>-->
    <!--<style name="MyShapeAppearance">-->
        <!--<item name="cornerFamilyTopLeft">rounded</item>-->
        <!--<item name="cornerFamilyBottomLeft">rounded</item>-->
        <!--<item name="cornerFamilyTopRight">rounded</item>-->
        <!--<item name="cornerFamilyBottomRight">rounded</item>-->
        <!--<item name="cornerSize">40dp</item>-->
    <!--</style>-->
            <!--style="@style/AppTheme.RoundedCornerMaterialButton"-->
            <!--tools:layout_editor_absoluteX="64dp"-->
            <!--tools:layout_editor_absoluteY="40dp"/>-->

    <Button
            android:id="@+id/btn_facebook"
            android:layout_width="249dp"
            android:layout_height="38dp"
            android:text="Visit us on Facebook"
            android:background="@color/cpYellow"
            android:layout_marginTop="176dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_enter_room" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp" android:layout_marginRight="80dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_credits" android:layout_marginBottom="10dp"

            android:stateListAnimator="@null"

    />
    <Button
            android:id="@+id/btn_credits"
            android:layout_width="250dp"
            android:layout_height="42dp"
            android:text="View credits"
            android:background="@color/cpYellow"
            app:layout_constraintBottom_toTopOf="@+id/btn_facebook"
            android:layout_marginBottom="150dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_enter_room" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="81dp" android:layout_marginRight="81dp"

            android:stateListAnimator="@null"
    />

</androidx.constraintlayout.widget.ConstraintLayout>