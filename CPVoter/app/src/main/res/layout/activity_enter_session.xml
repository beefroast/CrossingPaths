<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@color/cpYellow"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/linearLayout"
>
    <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:textAlignment="center"

            android:text="Enter the screening code to begin"
            android:id="@+id/textView"

            app:layout_constraintBottom_toTopOf="@+id/room_name"

            />

    <EditText
            android:id="@+id/room_name"

            android:maxLength="10"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ012345789"
            android:hint="Screening Code"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"

            app:layout_constraintBottom_toTopOf="@+id/btn_enter_room"


            />

    <ProgressBar

            android:id="@+id/progress_bar"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/btn_enter_room"
            app:layout_constraintBottom_toBottomOf="@+id/btn_enter_room"
            app:layout_constraintLeft_toLeftOf="@+id/btn_enter_room"
            app:layout_constraintRight_toRightOf="@+id/btn_enter_room"
    />

    <Button


            android:id="@+id/btn_enter_room"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:text="Enter"
            android:fadingEdge="horizontal|vertical"
            android:background="@color/cpLavender" style="@style/AppTheme.RoundedCornerMaterialButton"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="100dp"
    />





    <Button
            android:id="@+id/btn_facebook"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Visit us on Facebook"
            android:background="@color/cpYellow"

            app:layout_constraintBottom_toTopOf="@+id/btn_credits"

            android:stateListAnimator="@null"

    />
    <Button
            android:id="@+id/btn_credits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="View credits"
            android:background="@color/cpYellow"

            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"

            android:stateListAnimator="@null"
    />

</androidx.constraintlayout.widget.ConstraintLayout>